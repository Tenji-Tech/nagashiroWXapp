
.custom-tab-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.custom-tab-bar-wrapper .text {
  font-size: 20rpx;
}

.icon-wrapper {
  position: relative;
  color: #086CD0;
}

.icon-wrapper.active::after {
  content: '';
  position: absolute;
  top: -5rpx;
  left: -6rpx;
  width: 58rpx;
  height: 58rpx;
  background-color: #FFE26780;
  border-radius: 50%;
  z-index: 1;
}

.text {
  color: #086CD0;
  font-size: 22rpx;
  margin-top: 5rpx;
}

.text.active {
  color: #086CD0;
}