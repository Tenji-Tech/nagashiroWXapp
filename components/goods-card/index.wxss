.goods-card {
  background-color: #fff;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 30rpx 30rpx 30rpx 30rpx;
  border-bottom: none;
  box-shadow: 0 4px 8px #1980D840;
}

.goods-card__main {
  position: relative;
  display: flex;
  line-height: 1;
  padding: 0;
  background: transparent;
  width: 328rpx;
  border-radius: 30rpx 30rpx 30rpx 30rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  flex-direction: column;
}

.goods-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 272rpx;
  height: 218rpx;
  border-radius: 0rpx 0rpx 0rpx 0rpx; /* 根据需要调整圆角大小 */
  overflow: hidden; /* 确保内容超出部分不显示 */
  padding: 30rpx 0 0 0;
}

.goods-card__thumb:empty {
  display: none;
  margin: 0;
}

.goods-card__img {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 30rpx 30rpx 30rpx 30rpx;
  overflow: clip;
}

.goods-card__body {
  width: 80%;
  display: flex;
  flex: 1 1 auto;
  background: #fff;
  border-radius: 0rpx 0rpx 30rpx 30rpx;
  padding: 10rpx 0rpx 20rpx 0rpx;
  flex-direction: column;
}

.goods-card__upper {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  flex: 1 1 auto;
}

.goods-card__title {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #086CD0;
  font-weight: 400;
  display: -webkit-box;
  height: 36rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-word;
  line-height: 36rpx;
}

.goods-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0rpx 0 0 0;
}

.goods-card__tag {
  color: #086CD0;
  background: transparent;
  font-size: 20rpx;
  border: 0rpx solid #086CD0;
  padding: 0 0rpx;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 0 10rpx 10rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.goods-card__down {
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 8rpx 0 0 0;
}

.goods-card__origin-price {
  white-space: nowrap;
  font-weight: 700;
  order: 2;
  color: #bbbbbb;
  font-size: 36rpx;
  margin: 0 0 0 8rpx;
}

.goods-card__add-cart {
  order: 3;
  margin: auto 0 0 auto;
  position: absolute;
  bottom: 0;
  right: 0;
}

.spec-for-price {
  font-size: 36rpx;
  white-space: nowrap;
  font-weight: 400;
  order: 1;
  color: #FF4500;
  margin: 0;
}

.spec-for-symbol {
  font-size: 24rpx;
}

.goods-card__upper,
.goods-card__down {
  display: flex;
  flex-direction: column; /* 垂直方向排列 */
  align-items: flex-start; /* 左对齐 */
}
.goods-card__title,
.goods-card__tags,
.spec-for-price {
  text-align: left; /* 文本左对齐 */
}
