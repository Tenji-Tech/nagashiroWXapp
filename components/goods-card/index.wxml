<view
  id="{{independentID}}"
  class="goods-card"
  bind:tap="clickHandle"
  data-goods="{{ goods }}"
>
	<view class="goods-card__main">
		<view class="goods-card__thumb" bind:tap="clickThumbHandle">
			<image
			  wx:if="{{ !!goods.thumb }}"
			  t-class="goods-card__img"
			  src="{{goods.thumb}}"
			  mode="aspectFill"
			  style="width: 140px; height: 120px; background-color: #eeeeee;"
				lazyload
			/>
		</view>
		<view class="goods-card__body">
			<view class="goods-card__upper">
				<view wx:if="{{ goods.title }}" class="goods-card__title">
					{{ goods.title_jp }}
				</view>
				<view wx:if="{{ goods.tags && !!goods.tags.length }}" class="goods-card__tags">
					<view
					  wx:for="{{ goods.tags }}"
					  wx:key="index"
					  wx:for-item="tag"
					  class="goods-card__tag"
					  data-index="{{index}}"
					>
						{{goods.subTitle}}
					</view>
				</view>
			</view>
			<view class="goods-card__down">
				<price
				  wx:if="{{ goods.price }}"
				  wr-class="spec-for-price"
				  symbol-class="spec-for-symbol"
				  symbol="{{currency}}"
				  price="{{goods.price}}"
        />
				<!-- <image
					src="/images/add2cart.png"
				  class="goods-card__add-cart"
				  id="{{independentID}}-cart"
				  data-id="{{independentID}}"
				  catchtap="addCartHandle"
					style="width: 130rpx; height: 32rpx;"
        /> -->
        <button class="add-cart-button">
          <image src="/images/icons/add.png" class="icon"></image>
          <text class="button-text">カートに入れる</text>
        </button>
			</view>
		</view>
	</view>
</view>

