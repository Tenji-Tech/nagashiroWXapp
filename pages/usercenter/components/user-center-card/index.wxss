.user-center-card {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 480rpx;
  background-color: #F4FAFE;
  /* background-image: url('https://cdn-we-retail.ym.tencent.com/miniapp/template/user-center-bg-v1.png'); */
  background-size: cover;
  background-repeat: no-repeat;
  padding: 0 24rpx;
}
.user-center-card__header {
  margin-left: 50rpx;
  margin-top: 190rpx;
  margin-bottom: 50rpx;
  height: 96rpx;
  line-height: 48rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #333;
  position: relative;
}
.user-center-card__header__avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  overflow: hidden;
}

.user-center-card__header__name {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  line-height: 48rpx;
  color: #024E9A;
  font-weight: bold;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.user-name-text{
  margin-right: 20rpx;
}

.confirm-status-icon{
  width: 114rpx;
  height: 39rpx;
}

.user-center-card__header__email {
  font-size: 22rpx;
  line-height: 30rpx;
  color: #024E9A;
  margin-left: 24rpx;
  margin-right: 16rpx;
}
.user-center-card__header__transparent {
  position: absolute;
  left: 0;
  top: 0;
  background-color: transparent;
  height: 100%;
  width: 100%;
}
.user-center-card__icon {
  line-height: 96rpx;
}
